# ~/.dotfiles
super + s; period
    $HOME/.dmenu/dmenu-dotfiles.sh $HOME/.dotfiles

# window switcher
super + s; s
    /home/pawel/.local/bin/rofi -show window

# ~/Containers/Arch/.dotfiles
super + s; d
    $HOME/.dmenu/dmenu-dotfiles.sh $HOME/Containers/Arch/.dotfiles

# bookmarks
super + s; f
    /home/pawel/.dmenu/dmenu-xdgopen.sh $HOME/.config/gtk-3.0/bookmarks "Open bookmark:"

# sxhkd bindings
super + s; x
    $HOME/.dmenu/dmenu-sxhkd.sh

# processes
super + s; p
    $HOME/.dmenu/dmenu-process.sh

# repositories
super + s; r
    $HOME/.dmenu/dmenu-repos.sh $HOME/.repos

