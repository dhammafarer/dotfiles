# guest terminals
super + BackSpace
    xfce4-terminal -e "distrobox enter arch" --default-working-directory=/home/pl/box/arch

# ssh to server1
super + shift + BackSpace; {0,1,2}
    xfce4-terminal -e "distrobox enter c{0,1,2}" --default-working-directory=/home/pl/box/c{0,1,2}

# ssh to klaasje
super + shift + BackSpace; c
    xfce4-terminal -e "ssh baple"

# browsers
super + {_,control} + l
    {firefox,chromium}

# quit menu
super + Delete
    $HOME/.dmenu/dmenu_quit.sh

# lock screen
super + shift + Escape
    xscreensaver-command -l

# blank screen
super + control + Escape
    xscreensaver-command -a

# rofi-pass
XF86Tools
    ~/.local/bin/rofi-pass --root ~/.password-store

# blank screen
XF86Launch6
    xscreensaver-command -a

# rofi-calc
XF86Launch5
    ~/.local/bin/rofi -show calc -modi calc -no-show-match -no-sort

