# inbox
super + space; t; d
    /home/pl/.dmenu/dmenu_doing.sh

# inbox
super + space; t; f
    /home/pl/.dmenu/dmenu_finished.sh

# mindmaps
super + space; m
    $HOME/.dmenu/dmenu_xdgopen.sh $HOME/Nextcloud/Documents/mindmaps "Mindmaps"

