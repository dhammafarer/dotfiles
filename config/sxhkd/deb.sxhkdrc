##########################

# virtual machine manager
XF86Launch9; m
    /usr/bin/virt-manager

# mindmaps
XF86Launch9; t
    $HOME/.dmenu/dmenu_xdgopen.sh $HOME/Nextcloud/Documents/mindmaps "Mindmaps"

##########################
#       LEFT THUMB       #
#       XF86Launch7      #
##########################

# virtual machine manager
XF86Launch7; m
    /usr/bin/virt-manager

# edit mindmaps
XF86Launch7; t
    $HOME/.dmenu/dmenu_xdgopen.sh $HOME/Nextcloud/Documents/mindmaps "Mindmaps"

# edit dotfiles
XF86Launch7; period
    ~/.dmenu/dmenu_dotfiles.sh ~/.dotfiles

##########################
#       RIGHT THUMB      #
#       XF86Launch8      #
##########################

# send notification
XF86Launch8; t
    notify-send 'l8'

# pyradio
XF86Launch8; r
    xdotool key Super_L+c; xfce4-terminal -e "distrobox enter arch -e 'pyradio -s soma -p 1 -d'"; xdotool key Super_L+z

# Volume Control
{ XF86AudioLowerVolume,XF86AudioRaiseVolume }
    pactl set-sink-volume @DEFAULT_SINK@ {-,+}5%

{ button7,button6 }
    pactl set-sink-volume @DEFAULT_SINK@ {-,+}5%

#### Start Rofi ####
# desktop entries
super + n
    rofi -show drun -modi drun

super + space; w
    rofi -show window

# ssh launcher
super + shift + Return
    rofi -show ssh

# print screen selection with maim
Print
    maim -s -u | xclip -selection clipboard -t image/png -i

#### End Rofi ####
