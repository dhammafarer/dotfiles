# ~/.dotfiles
super + s; period
    $HOME/.dmenu/dmenu_dotfiles.sh $HOME/.dotfiles

# window switcher
super + s; s
    rofi -show window

# ~/Containers/Arch/.dotfiles
super + s; d
    $HOME/.dmenu/dmenu_dotfiles.sh $HOME/Containers/Arch/.dotfiles

# gtk-3.0/bookmarks.ini
super + s; f
    /home/pawel/.dmenu/dmenu_dir.sh $HOME/.config/gtk-3.0/bookmarks ""

# gtk-3.0/bookmarks.ini
super + s; b
    /home/pawel/.dmenu/dmenu_bookmarks.sh $HOME/.bookmarks

# sxhkd bindings
super + s; x
    $HOME/.dmenu/dmenu_sxhkd.sh

# processes
super + s; p
    $HOME/.dmenu/dmenu_process.sh

# repositories
super + s; r
    $HOME/.dmenu/dmenu_repos.sh $HOME/.repos

# mindmaps
super + s; m
    $HOME/.dmenu/dmenu_xdgopen.sh $HOME/Nextcloud/Documents/mindmaps ""

# scripts
super + s; e
    $HOME/.dmenu/dmenu_scripts.sh

# colors
super + s; c
    $HOME/.dmenu/dmenu_colors.sh

# install modules
super + s; i
    $HOME/.dmenu/dmenu_modules.sh $HOME/dotfiles/install/modules "Modules"

