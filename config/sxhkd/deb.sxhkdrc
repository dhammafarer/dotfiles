# guest terminals
super + BackSpace
    xfce4-terminal -e "distrobox enter arch" --default-working-directory=/home/pl/box/arch

# ssh to server1
super + shift + BackSpace; {0,1,2}
    xfce4-terminal -e "vagrant ssh server{0,1,2}" --default-working-directory=/home/pl/vagrant/rocky8

# ssh to klaasje
super + shift + BackSpace; k
    xfce4-terminal -e "ssh klaasje"

# browsers
super + {_,control} + l
    {firefox,chromium}

# quit menu
super + Delete
    $HOME/.dmenu/dmenu_quit.sh

# lock screen
super + shift + Escape
    xscreensaver-command -l

# blank screen
super + control + Escape
    xscreensaver-command -a

# rofi-pass
XF86Tools
    ~/.local/bin/rofi-pass --root ~/.password-store

# blank screen
XF86Launch6
    xscreensaver-command -a

# rofi-calc
XF86Launch5
    ~/.local/bin/rofi -show calc -modi calc -no-show-match -no-sort

# blank screen
XF86Launch7; m
    /usr/bin/virt-manager

XF86Launch8; t
    notify-send 'l8'

# Volume Control
{ XF86AudioLowerVolume,XF86AudioRaiseVolume }
    pactl set-sink-volume @DEFAULT_SINK@ {-,+}5%

{ button7,button6 }
    pactl set-sink-volume @DEFAULT_SINK@ {-,+}5%

#### Start Rofi ####
# calculator
super + Escape; c
    rofi -show drun -modi drun

# pass
super + Escape; p
    ~/.local/bin/rofi-pass --root ~/.password-store

# window switcher
super + n
    rofi -show window

super + alt + space
    rofi -show window

# ssh launcher
super + shift + Return
    rofi -show ssh

# print screen selection with maim
Print
    maim -s -u | xclip -selection clipboard -t image/png -i

#### End Rofi ####
