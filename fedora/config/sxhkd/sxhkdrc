#       LEFT PINKY       #
#       XF86Launch9      #
##########################

# virtual machine manager
XF86Launch9; s
    /usr/bin/virt-manager

# print screen selection with maim
Print
    scrot -s -q 100 -e 'xclip -selection clipboard -t image/png -i $f'

