# guest terminals
super + BackSpace
    xfce4-terminal -e "distrobox enter dev" \
    --default-working-directory=/home/pl/box/dev

# browsers
super + {_,control} + l
    flatpak run {org.mozilla.firefox,com.google.Chrome}

# open clipboard link in browser
super + {_,control} + shift + l
    flatpak run {org.mozilla.firefox,com.google.Chrome} --new-window $(xclip -o -selection clipboard)

# lock screen
super + shift + Escape
    cmus-remote -U; xscreensaver-command -l

# blank screen
super + control + Escape
    xscreensaver-command -a

{XF86AudioPlay,XF86AudioPause}
    cplay

# rofi-pass
XF86Tools
    ~/.local/bin/rofi-pass --root ~/.password-store 2> /tmp/rofi-pass.log

# blank screen
XF86Launch6
    xscreensaver-command -a

# rofi-calc
#XF86Launch5
control + XF86Tools
    LC_MONETARY=zh_TW.utf8 ~/.local/bin/rofi -show calc -modi calc -no-show-match -no-sort

# mindmaps alt
XF86Launch9; t
    ~/dotfiles/fedora/dmenu/dmenu_xdgopen.sh \
    $HOME/Nextcloud/Documents/mindmaps "Mindmaps" 3

# Logseq
XF86Launch9; l
    ~/apps/Logseq

# Bus
XF86Launch9; b
    ~/dotfiles/arch/bin/bus2

