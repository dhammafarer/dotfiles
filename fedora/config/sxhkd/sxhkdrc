# guest terminals
super + BackSpace
    xfce4-terminal -e "distrobox enter dev" --default-working-directory=/home/pl/box/dev

# browsers
super + {_,control} + l
    flatpak run {org.mozilla.firefox,com.google.Chrome}

# lock screen
super + shift + Escape
    xscreensaver-command -l

# blank screen
super + control + Escape
    xscreensaver-command -a

{XF86AudioPlay,XF86AudioPause}
    cplay

# rofi-pass
XF86Tools
    ~/.local/bin/rofi-pass --root ~/.password-store 2> /tmp/rofi-pass.log

# blank screen
XF86Launch6
    xscreensaver-command -a

# rofi-calc
XF86Launch5
    ~/.local/bin/rofi -show calc -modi calc -no-show-match -no-sort

# mindmaps alt
XF86Launch9; t
    ~/dotfiles/fedora/dmenu/dmenu_xdgopen.sh $HOME/Nextcloud/Documents/mindmaps "Mindmaps" 3

# Logseq
XF86Launch9; l
    ~/apps/Logseq

