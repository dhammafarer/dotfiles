# desktop entries
super + v
  dmenu_run

# desktop entries
super + space; n
    QT_STYLE_OVERRIDE=kvantum rofi -show drun -modi drun

super + space; w
    rofi -show window

# print screen selection with maim
Print
    maim -s -u | xclip -selection clipboard -t image/png -i

