# pyradio
XF86Launch8; r
  xdotool key Super_L+c; xfce4-terminal -e "distrobox enter dev -e 'pyradio -s soma -p 1 -d'"; xdotool key Super_L+z

# Volume Control
{ XF86AudioLowerVolume,XF86AudioRaiseVolume }
    pactl set-sink-volume @DEFAULT_SINK@ {-,+}5%

{ button7,button6 }
    pactl set-sink-volume @DEFAULT_SINK@ {-,+}5%

